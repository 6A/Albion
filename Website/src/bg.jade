mixin circle(radius)
    - var length = radius * Math.PI * 2
    - var offset = Math.floor(Math.random() * length)
    - var stroke = (length / 10) + Math.floor(Math.random() * (length * (4 / 5)))
    circle.stroke(cx='80%', cy='70%', r=radius, stroke='white', fill='none', stroke-width='1', data-length=length, stroke-dasharray=stroke+' '+(length-stroke), stroke-dashoffset=offset)

svg.strokes(version='1.1', xmlns='http://www.w3.org/2000/svg', preserveAspectRatio='none')
    each radius in [50,100,200,300,500,800,1100]
        +circle(radius)
